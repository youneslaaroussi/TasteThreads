@startuml TasteThreadsTools
skinparam dpi 300
skinparam backgroundColor #FFFFFF
skinparam defaultFontName Arial
skinparam defaultFontSize 12
skinparam defaultFontColor #232F3E
skinparam roundcorner 5
skinparam shadowing false
skinparam linetype ortho

skinparam component {
  BackgroundColor #146EB4
  BorderColor #0F4C75
  BorderThickness 2
  FontSize 12
  FontStyle bold
  FontColor #FFFFFF
  Padding 12
}

skinparam package {
  BackgroundColor #E8F5E9
  BorderColor #146EB4
  BorderThickness 3
  FontSize 14
  FontStyle bold
  FontColor #146EB4
  Padding 20
}

skinparam arrow {
  Thickness 2
  Color #232F3E
  FontSize 11
}

skinparam nodesep 100
skinparam ranksep 120

package "ORCHESTRATOR TOOLS" #E8F5E9 {
  component "Openings Tool" as openings_tool
  component "Hold Tool" as hold_tool
  component "Book Tool" as book_tool
  component "Fusion Tool" as fusion_tool
  openings_tool -[hidden]- hold_tool
  hold_tool -[hidden]- book_tool
  book_tool -[hidden]- fusion_tool
}

component "Tess Orchestrator" as orchestrator

orchestrator --> openings_tool : Find Slots
orchestrator --> hold_tool : Hold Slot
orchestrator --> book_tool : Confirm Booking
orchestrator --> fusion_tool : Enrich Business

@enduml

